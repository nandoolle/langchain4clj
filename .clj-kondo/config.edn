{;; Hooks for macros that define symbols dynamically
 :hooks {:analyze-call {langchain4clj.memory/defmemory hooks.langchain4clj.memory/defmemory
                        langchain4clj.structured/defstructured hooks.langchain4clj.structured/defstructured}}

 ;; Suppress inline-def warnings in test namespaces that use defmemory/defstructured
 ;; These macros legitimately define vars inside testing blocks
 :config-in-ns {langchain4clj.memory-test {:linters {:inline-def {:level :off}}}
                langchain4clj.memory-integration-test {:linters {:inline-def {:level :off}}}
                langchain4clj.structured-test {:linters {:inline-def {:level :off}}}}

 :linters {:unresolved-symbol {:level :warning
                               :exclude [;; defstructured macro in src (for examples in comments)
                                         (langchain4clj.structured/Person)]}
           :unused-binding {:level :warning}
           :unused-import {:level :warning
                          ;; These imports are used in defbuilder macro expansions
                          ;; clj-kondo doesn't detect static method calls in macros
                           :exclude [dev.langchain4j.model.openai.OpenAiChatModel
                                     dev.langchain4j.model.anthropic.AnthropicChatModel
                                     dev.langchain4j.model.googleai.GoogleAiGeminiChatModel
                                     dev.langchain4j.model.vertexai.VertexAiGeminiChatModel
                                     dev.langchain4j.model.ollama.OllamaChatModel
                                     dev.langchain4j.model.openai.OpenAiStreamingChatModel
                                     dev.langchain4j.model.anthropic.AnthropicStreamingChatModel
                                     dev.langchain4j.model.ollama.OllamaStreamingChatModel
                                     dev.langchain4j.model.openai.OpenAiImageModel]}
           :unused-private-var {:level :warning}
           :unused-referred-var {:level :warning}
           :unused-namespace {:level :warning}
           :refer-all {:level :warning}
           :missing-docstring {:level :off}
           :redundant-do {:level :warning}
           :redundant-let {:level :warning}
           :type-mismatch {:level :warning}
           :invalid-arity {:level :warning
                           :skip-args [langchain4clj.macros/defbuilder]}}
 :lint-as {}
 :skip-comments true}
